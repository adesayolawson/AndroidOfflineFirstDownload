<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.downloadmanagersample.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_FirstFragment_to_exoPlayerFragment"
            app:destination="@id/exoPlayerFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_svgPlayerFragment"
            app:destination="@id/svgPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/exoPlayerFragment"
        android:name="com.example.downloadmanagersample.exoplayer.ExoPlayerFragment"
        android:label="ExoPlayerFragment" >
        <argument android:name="mediaGroup"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/svgPlayerFragment"
        android:name="com.example.downloadmanagersample.SvgPlayerFragment"
        android:label="fragment_svg_player"
        tools:layout="@layout/fragment_svg_player" >
        <argument android:name="mediaGroup"
            app:argType="string" />
    </fragment>
</navigation>